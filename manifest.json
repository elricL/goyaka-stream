{
    "name": "Goyaka Stream",
    "description": "A simple chrome app experiment to play goyaka playlist songs",
    "version": "1.0",
    "manifest_version" : 2,

    "permissions": [
        "storage",
        "identity",
        "unlimitedStorage",
        "webRequest",
        "webRequestBlocking",
        "notifications",
        "*://*.youtube.com/*",
        "*://*.facebook.com/*",
        "*://*.fbexternal-a.akamaihd.net/*"
    ],
    "browser_action": {
        "default_icon": "radio.png",
        "default_popup": "popup.html"
    },
    "commands" : {
        "toggle-play": {
          "suggested_key": { "default": "MediaPlayPause" },
          "description": "Play/Pause the current song",
          "global" : true
        },
       "next-song": {
          "suggested_key": { "default": "MediaNextTrack" },
          "description": "Next track",
          "global" : true
        } 
    },
    "background": {
        "page": "background.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://facebook.com https://graph.facebook.com https://connect.facebook.net https://www.youtube.com/player_api https://ssl.google-analytics.com https://s.ytimg.com https://apis.google.com; object-src 'self'"
}
